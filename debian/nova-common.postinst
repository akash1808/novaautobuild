#!/bin/sh -e

if [ "$1" = "configure" ]; then
    if ! getent passwd nova > /dev/null 2>&1; then
        adduser --system --home /var/lib/nova --no-create-home --shell /bin/bash nova
    fi
    chown -R nova:nogroup /var/lib/nova /var/log/nova
	chmod 0440 /etc/sudoers.d/nova_sudoers
fi


